echo "Enabling Google strategy"
oaesh -U http://<%= admin_host %> -u administrator -p administrator -- \
    config-set \
        -k "oae-authentication/google/enabled=true" \
        -k "oae-authentication/google/key=832766182042-er6qqh5nqitn30oqrtad7mvgcadl6dcr.apps.googleusercontent.com" \
        -k "oae-authentication/google/secret=MKo6exTvIM8_tiJDt1t4zYWz"

